<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_gravity="fill_vertical|fill_horizontal"
	android:layout_height="match_parent" android:layout_width="match_parent"
	android:background="@drawable/newfirst4">
	<Button android:id="@+id/Button01" android:onClick="@string/new_scan_handler"
		android:background="@android:color/transparent" android:layout_width="fill_parent"
		android:layout_marginTop="10dip" android:layout_height="120dip"></Button>
	<Button android:id="@+id/Button02" android:onClick="@string/manual_scan_handler"
		android:background="@android:color/transparent" android:layout_width="fill_parent"
		android:layout_height="111dip"></Button>
	<Button android:id="@+id/Button03" android:onClick="@string/receipts_handler"
		android:background="@android:color/transparent" android:layout_width="fill_parent"
		android:layout_height="111dip"></Button>
	<Button android:id="@+id/Button04" android:onClick="@string/statistics_handler"
		android:background="@android:color/transparent" android:layout_height="120dip"
		android:layout_width="fill_parent"></Button>
	<LinearLayout android:id="@+id/LinearLayout01"
		android:orientation="horizontal" android:layout_width="wrap_content"
		android:layout_height="wrap_content">

	</LinearLayout>
</LinearLayout>