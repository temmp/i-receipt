<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent" android:layout_width="fill_parent"
	android:orientation="vertical" android:background="@color/white">
	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:id="@+id/search"
		android:textColor="@color/darkGreen" android:layout_gravity="center_horizontal"
		android:textSize="30sp" android:text="Advance Search:"
		android:layout_marginTop="6sp"></TextView>
	<LinearLayout android:id="@+id/LinearLayout07"
		android:orientation="horizontal" android:layout_width="fill_parent"
		android:layout_height="325sp">
		<RadioGroup android:id="@+id/RadioGroup01"
			android:orientation="vertical" android:layout_width="40sp"
			android:layout_height="wrap_content" android:layout_marginTop="10sp">

			<RadioButton android:id="@+id/RadioButton01"
				android:layout_width="wrap_content" android:layout_height="wrap_content"></RadioButton>
			<RadioButton android:id="@+id/RadioButton02"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_marginTop="80sp"></RadioButton>
			<RadioButton android:id="@+id/RadioButton03"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_marginTop="100sp"></RadioButton>

		</RadioGroup>
		<LinearLayout android:id="@+id/LinearLayout06"
			android:orientation="vertical" android:layout_width="fill_parent"
			android:layout_height="325sp">

			<LinearLayout android:id="@+id/LinearLayout04"
				android:layout_height="40sp" android:layout_marginLeft="100sp"
				android:layout_width="wrap_content" android:layout_marginTop="6sp">
				<TextView android:id="@+id/TextView02"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:text="Date:" android:textColor="@color/black"
					android:textSize="20sp" android:layout_gravity="center_vertical"></TextView>
			</LinearLayout>
			<LinearLayout android:id="@+id/LinearLayout02"
				android:layout_height="wrap_content" android:layout_width="fill_parent"
				android:layout_marginTop="5sp">
				<TextView android:layout_height="wrap_content"
					android:textColor="@color/black" android:textSize="20sp"
					android:text="From:" android:id="@+id/TextView04"
					android:layout_gravity="center_vertical" android:layout_marginLeft="15sp"
					android:layout_width="85sp"></TextView>
				<TextView android:id="@+id/pickDateFrom" android:clickable="true"
					android:textColor="@color/black" android:background="@drawable/graybutton"
					android:gravity="center_vertical" android:paddingLeft="8sp"
					android:textSize="16sp" android:layout_height="36sp"
					android:layout_width="120sp" android:layout_marginLeft="20sp" />




			</LinearLayout>
			<LinearLayout android:id="@+id/LinearLayout09"
				android:layout_height="wrap_content" android:layout_width="fill_parent"
				android:layout_marginTop="10sp">
				<TextView android:layout_height="wrap_content"
					android:textColor="@color/black" android:textSize="20sp"
					android:id="@+id/TextView05" android:text="To:"
					android:layout_gravity="center_vertical" android:layout_marginLeft="15sp"
					android:layout_width="85sp"></TextView>
				<TextView android:id="@+id/pickDateTo" android:clickable="true"
					android:textColor="@color/black" android:paddingLeft="10sp"
					android:background="@drawable/graybutton" android:gravity="center_vertical"
					android:textSize="16sp" android:layout_height="36sp"
					android:layout_width="120sp" android:layout_marginLeft="20sp" />
			</LinearLayout>
			<LinearLayout android:id="@+id/LinearLayout05"
				android:layout_height="40sp" android:layout_width="wrap_content"
				android:layout_marginLeft="100sp" android:layout_marginTop="6sp">
				<TextView android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:textColor="@color/black"
					android:textSize="20sp" android:id="@+id/TextView03" android:text="Price:"
					android:layout_gravity="center_vertical"></TextView>
			</LinearLayout>
			<LinearLayout android:id="@+id/LinearLayout03"
				android:layout_height="wrap_content" android:layout_width="fill_parent">
				<TextView android:layout_height="wrap_content"
					android:textColor="@color/black" android:textSize="20sp"
					android:text="From:" android:id="@+id/TextView04"
					android:layout_gravity="center_vertical" android:layout_marginLeft="15sp"
					android:layout_width="85sp"></TextView>
				<EditText android:gravity="left" android:layout_gravity="center_vertical"
					android:textColor="@color/darkGray" android:layout_height="40sp"
					android:textSize="15sp" android:layout_width="120sp" android:id="@+id/EditText05"
					android:layout_marginTop="5sp" android:maxLines="1"
					android:maxLength="20" android:maxWidth="180sp"
					android:layout_marginLeft="20sp"></EditText>



			</LinearLayout>
			<LinearLayout android:id="@+id/LinearLayout01"
				android:layout_height="wrap_content" android:layout_width="fill_parent">
				<TextView android:layout_height="wrap_content"
					android:textColor="@color/black" android:textSize="20sp"
					android:id="@+id/TextView05" android:text="To:"
					android:layout_gravity="center_vertical" android:layout_marginLeft="15sp"
					android:layout_width="85sp"></TextView>
				<EditText android:gravity="left" android:layout_gravity="center_vertical"
					android:textColor="@color/darkGray" android:layout_height="40sp"
					android:textSize="15sp" android:layout_width="120sp" android:id="@+id/EditText06"
					android:layout_marginTop="5sp" android:maxLength="20"
					android:maxLines="1" android:maxWidth="180sp"
					android:layout_marginLeft="20sp"></EditText>
			</LinearLayout>
			<LinearLayout android:id="@+id/LinearLayout08"
				android:layout_width="fill_parent" android:layout_marginTop="15sp"
				android:layout_height="40sp">
				<TextView android:layout_height="wrap_content"
					android:textColor="@color/black" android:textSize="20sp"
					android:text="Category:" android:layout_marginTop="10sp"
					android:id="@+id/TextView06" android:layout_marginLeft="15sp"
					android:layout_width="85sp"></TextView>
				<Spinner android:id="@+id/Spinner01" android:layout_height="40sp"
					android:layout_marginTop="4sp" android:layout_marginLeft="20sp"
					android:layout_width="120sp"></Spinner>
			</LinearLayout>

		</LinearLayout>
	</LinearLayout>



	<Button android:background="@drawable/searchbutton"
		android:layout_height="40sp" android:layout_width="40sp" android:id="@+id/searchButton"
		android:onClick="@string/search" android:layout_gravity="bottom|center_horizontal"
		android:layout_marginTop="50sp"></Button>





</LinearLayout>