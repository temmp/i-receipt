<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent" android:layout_width="fill_parent"
	android:orientation="vertical" android:background="@color/white">

	<LinearLayout android:id="@+id/LinearLayout01"
		android:layout_width="fill_parent" android:layout_height="60sp"
		android:layout_marginTop="5sp">
		<TextView android:id="@+id/payments" android:text="Payments:"
			android:textColor="@color/darkGreen" android:gravity="center_vertical|center_horizontal"
			android:layout_height="fill_parent" android:layout_width="fill_parent"
			android:textSize="32sp"></TextView>
	</LinearLayout>
	<LinearLayout android:id="@+id/LinearLayout02"
		android:layout_width="fill_parent" android:layout_height="30sp"
		android:layout_marginTop="20sp">
		<TextView android:layout_height="30sp"
			android:layout_gravity="center_vertical|center_horizontal"
			android:text="This month:" android:textColor="@color/black"
			android:id="@+id/ThisMonth" android:textSize="25sp" android:layout_width="135sp" android:layout_marginLeft="8sp"></TextView>
		<TextView android:textSize="25sp" android:layout_height="30sp"
			android:numeric="decimal" android:id="@+id/totalThisMonth"
			android:layout_gravity="right|center_vertical" android:gravity="right|center_vertical"
			android:textColor="@color/darkGreen"
			android:layout_width="140sp" android:layout_marginTop="-3sp"></TextView>
		<ImageButton android:id="@+id/dollar1"
			android:layout_centerHorizontal="true" android:layout_margin="3dp"
			android:background="@drawable/dollar" android:scaleType="center"
			android:layout_gravity="center_vertical|center_horizontal"
			android:layout_height="24sp" android:layout_width="24sp">
		</ImageButton>

	</LinearLayout>
	<LinearLayout android:id="@+id/LinearLayout03"
		android:layout_width="fill_parent" android:layout_height="30sp"
		android:layout_marginTop="20sp">
		<TextView android:layout_height="30sp"
			android:layout_gravity="center_vertical|center_horizontal"
			android:textColor="@color/black"
			android:text="Last month:" android:id="@+id/LastMonth" android:textSize="25sp" android:layout_width="135sp" android:layout_marginLeft="8sp"></TextView>
		<TextView android:numeric="decimal" android:layout_height="30sp"
			android:id="@+id/totalLastMonth" android:textSize="25sp"
			android:layout_gravity="right|center_vertical" android:gravity="right|center_vertical"
			android:textColor="@color/darkGreen"
			android:layout_width="140sp" android:layout_marginTop="-3sp"></TextView>
		<ImageButton android:id="@+id/dollar1"
			android:layout_centerHorizontal="true" android:layout_margin="3dp"
			android:background="@drawable/dollar" android:scaleType="center"
			android:layout_gravity="center_vertical|center_horizontal"
			android:layout_height="24sp" android:layout_width="24sp">
		</ImageButton>
	</LinearLayout>
	<LinearLayout android:id="@+id/LinearLayout07" android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_marginTop="50sp"><TextView android:id="@+id/TextView01" android:layout_height="wrap_content" android:textColor="@color/black" android:textSize="23sp" android:text="From date:" android:layout_marginLeft="14sp" android:layout_width="120sp"></TextView><TextView android:id="@+id/pickDateFrom" android:clickable="true" android:textColor="@color/black" android:layout_width="150sp" android:background="@drawable/calendaricon3" android:layout_height="30sp" android:gravity="right|center_vertical" android:paddingRight="20sp" android:textSize="23sp" android:layout_marginLeft="12sp"/>
</LinearLayout>
	<LinearLayout android:id="@+id/LinearLayout1"
		android:layout_width="fill_parent" android:orientation="horizontal"
		android:layout_height="40sp" android:layout_marginTop="10sp"><TextView android:id="@+id/TextView02" android:layout_height="wrap_content" android:textColor="@color/black" android:textSize="23sp" android:text="To date:" android:layout_marginLeft="14sp" android:layout_width="120sp"></TextView>
		
		<TextView android:id="@+id/pickDateTo" android:clickable="true" android:textColor="@color/black"
			android:layout_width="150sp" android:background="@drawable/calendaricon3" android:layout_height="30sp" android:gravity="right|center_vertical" android:paddingRight="20sp" android:textSize="23sp" android:layout_marginLeft="12sp"/>
	
</LinearLayout>
	<LinearLayout android:layout_width="fill_parent"
		android:id="@+id/LinearLayout04" android:layout_height="35sp" android:layout_marginTop="10sp">
		<TextView android:numeric="decimal" android:layout_height="30sp"
			android:textSize="25sp" android:id="@+id/totalFromTo"
			android:layout_gravity="right|center_vertical"
			android:layout_marginLeft="10sp" android:gravity="right|center_vertical"
			android:textColor="@color/darkGreen" android:layout_marginTop="-4sp"
			android:layout_width="260sp"></TextView>
		<ImageButton android:id="@+id/dollar1"
			android:layout_centerHorizontal="true" android:layout_margin="3dp"
			android:background="@drawable/dollar" android:scaleType="center"
			android:layout_gravity="bottom" android:layout_height="24sp"
			android:layout_width="24sp">
		</ImageButton>
	</LinearLayout><TextView android:clickable="true" android:textColor="@color/black" android:id="@+id/pieChart" android:onClick="@string/pieChart" android:text="Pie Chart" android:gravity="center_vertical|center_horizontal" android:layout_gravity="center_horizontal" android:background="@drawable/piechart2" android:layout_height="35sp" android:textSize="25sp" android:paddingLeft="40sp" android:layout_width="145sp" android:layout_marginTop="40sp"/><LinearLayout android:id="@+id/LinearLayout06" android:layout_height="wrap_content" android:layout_width="fill_parent"><TextView android:clickable="true" android:textColor="@color/black" android:id="@+id/pieChart" android:onClick="@string/pieChart" android:textSize="20sp" android:gravity="center_vertical|center_horizontal" android:layout_marginTop="60sp" android:layout_width="100sp" android:layout_height="40sp" android:text="XY Chart" android:layout_marginLeft="30sp" android:visibility="invisible"/></LinearLayout>
	







</LinearLayout>